<%= form_for(@observation) do |f| %>
  <% if @observation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@observation.errors.count, "error") %> prohibited this observation from being saved:</h2>

      <ul>
      <% @observation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Coral: <%= @observation.coral_id %></p>
  <p>Fieldtrip: <%= @observation.fieldtrip_id %></p>

  <div class="field">
    <%= f.label :mother_id %>
    <%= f.number_field :mother_id %>
  </div>
  <div class="field">
    <%= f.label :tag_number %>
    <%= f.number_field :tag_number %>
  </div>
  <div class="field">
    <%= f.label :active_tag %>
    <%= f.number_field :active_tag %>
  </div>
  <div class="field">
    <%= f.label :action %>
	<%= f.select :action, ['', 'photographed', 'not found', 'no scale', 'not real', 'dead', 'gone'] %>
  </div>

  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
