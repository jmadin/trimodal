<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1>Fieldtrips</h1>
    

    <table class="table">
      <% @fieldtrips.each do |fieldtrip| %>
        <tr>
          <td><%= fieldtrip.id %></td>
          <td><%= fieldtrip.name %></td>
          <td><%= fieldtrip.name_code %></td>
          <td><%= fieldtrip.date %></td>
          <td style="width:500px;"><%= fieldtrip.description %></td>

          <td>
            <div class="btn-group">
              <%= link_to 'Progress', fieldtrip, class: "btn btn-sm btn-default" %>
              <%= link_to 'Edit', edit_fieldtrip_path(fieldtrip), class: "btn btn-sm btn-default" %>
            </div>
          </td>
        </tr>
      <% end %>
    </table>

    <%= link_to 'New Fieldtrip', new_fieldtrip_path, class: "btn btn-primary" %>

  </div>
</div>